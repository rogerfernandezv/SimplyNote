<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rogerdev.simplynote.br.simplynote" >

    <uses-permission android:name="android.permission.camera"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-permission android:name="android.permission.write_external_storage"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    
    <application
        android:name=".util.GlobalResource"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AdicionarActivity"
            android:label="@string/title_activity_adicionar" >
        </activity>
        <activity
            android:name=".ui.AtualizarActivity"
            android:label="@string/title_activity_atualizar" >
        </activity>
    </application>

</manifest>
